<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheTopNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightWhite</item>
        <item name="colorPrimaryVariant">@color/lightWhite</item>
        <item name="colorOnPrimary">@color/lightWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/mysteryBlack</item>
        <item name="android:background">@color/lightWhite</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="TopNewsStyle.Card">
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:layout_marginStart">@dimen/_8dp</item>
        <item name="android:layout_marginEnd">@dimen/_8dp</item>
        <item name="android:layout_marginBottom">@dimen/_6dp</item>
    </style>

    <style name="TopNewsStyle.Headlines" parent="TopNewsStyle.TextStyle">
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TopNewsStyle.Title" parent="TopNewsStyle.TextStyle">
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TopNewsStyle.NewsAuthor">
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/transparentGrey</item>
        <item name="android:textColor">@color/blazingYellow</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="TopNewsStyle.PublishedAt" parent="TopNewsStyle.TextStyle">
        <item name="android:layout_marginBottom">@dimen/_10dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="TopNewsStyle" />

    <style name="TopNewsStyle.TextStyle">
        <item name="android:textColor">@color/mysteryBlack</item>
    </style>
</resources>