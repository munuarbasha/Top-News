<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheTopNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="TopNewsStyle.Card">
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:layout_marginStart">@dimen/_8dp</item>
        <item name="android:layout_marginEnd">@dimen/_8dp</item>
        <item name="android:layout_marginBottom">@dimen/_6dp</item>
    </style>

    <style name="TopNewsStyle.Headlines">
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TopNewsStyle.NewsAuthor">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="TopNewsStyle.PublishedAt">
        <item name="android:layout_marginBottom">@dimen/_10dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="TopNewsStyle"/>

</resources>